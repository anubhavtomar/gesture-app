<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:id="@+id/sampleName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:autoText="false"
            android:ems="10"
            android:hint="@string/recrding_name"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
            android:id="@+id/stopRcrd"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/sampleName"
            android:contentDescription="@string/cancel" android:src="@android:drawable/ic_delete"
            tools:src="@android:drawable/ic_delete"
    />

    <ImageButton
            android:id="@+id/startRcrd"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sampleName"
            tools:srcCompat="@android:drawable/ic_input_add"
            android:layout_marginTop="44dp"
            android:src="@android:drawable/ic_input_add" tools:src="@android:drawable/ic_input_add"
            android:contentDescription="@android:string/VideoView_error_button"/>

</android.support.constraint.ConstraintLayout>